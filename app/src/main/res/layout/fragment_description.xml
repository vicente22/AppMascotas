<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InfoActivity"
    android:background="@color/colorPrimaryLight">
    <TextView
        android:drawableTop="@mipmap/baseline_pets_black_24dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="#FFF"
        android:textAlignment="center"
        android:textSize="20sp"
        android:id="@+id/textViewPetTitle"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_marginRight="10sp"
            android:layout_marginLeft="10sp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="400dp">
            <ImageView
                android:id="@+id/imageViewInfoPet"
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="70dp" />
            <TextView
                android:padding="5dp"
                android:layout_margin="5dp"
                android:textColor="@color/textColor"
                android:textSize="20dp"
                android:text="@string/petDescription"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:padding="5dp"
                android:layout_margin="5dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/backgroundColor"
                android:textColor="@color/buttonPrimary"
                android:textAlignment="inherit"
                android:textSize="17sp"
                android:id="@+id/textViewResultInfoPet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>