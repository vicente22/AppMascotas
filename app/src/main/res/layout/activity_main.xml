<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearForm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryLight"
        android:orientation="vertical">

        <TextView
            android:drawableLeft="@mipmap/baseline_pets_black_24dp"
            android:drawableRight="@mipmap/baseline_pets_black_24dp"
            android:shadowColor="@color/backgroundColor"
            android:id="@+id/textViewAppTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimary"
            android:text="@string/idealPet"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
            android:textColor="@color/buttonPrimary"
            android:id="@+id/textViewCompleteForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Completa nuestro formulario"
            android:textAlignment="center"
            android:textSize="19sp" />

        <fragment
            android:name="cl.vicentepc.miappprueba1.FormFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linearForm"
            tools:layout="@layout/fragment_form"></fragment>

    </LinearLayout>

</RelativeLayout>